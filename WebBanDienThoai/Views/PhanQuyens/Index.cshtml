@model IEnumerable<WebBanDienThoai.Models.PhanQuyen>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h2>Quyền truy cập</h2>

<p>
    <button type="button" class="btn btn-info"><a asp-action="Create">Thêm mới</a></button>

</p>
<table class="table">
    <tr class="table-waring">
        <th>
            ID
        </th>
        <th>
            Tên Quyền
        </th>
        <th>Thao tác</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDQuyen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenQuyen)
            </td>
            <td>
                <button class="btn btn-success">
                    @Html.ActionLink("Sửa", "Edit", new { id = item.IDQuyen }, new { @style = "color:white;" })
                </button>
               
                <button class="btn btn-danger">
                    @Html.ActionLink("Xóa", "Delete", new { id = item.IDQuyen }, new { @style = "color:white;" })
                </button>
            </td>
        </tr>
    }

</table>
