@model WebBanDienThoai.Models.TChiTietHdn

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h1>Create</h1>

<h3>Tạo chi tiết hóa đơn nhập</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:none;">
                <label asp-for="SoHdn" class="control-label"></label>
                <input asp-for="SoHdn" class="form-control" value="@ViewBag.SoHdn" />
            </div>
            <div class="form-group">
                <label asp-for="MaSp" class="control-label">Tên sản phẩm</label>
                <select asp-for="MaSp" class ="form-control" asp-items="ViewBag.MaSp"></select>
            </div>

            <div class="form-group">
                <label asp-for="Slnhap" class="control-label">Số lượng</label>
                <input asp-for="Slnhap" class="form-control" />
                <span asp-validation-for="Slnhap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KhuyenMai" class="control-label">Khuyến mãi</label>
                <input asp-for="KhuyenMai" class="form-control" />
                <span asp-validation-for="KhuyenMai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Về danh sách", "Index", new { id= ViewBag.SoHdn })
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .btn {
        float: left;
        margin-left: 15px;
    }

    .invoiceOut-list {
        margin-top: revert-layer;
        text-align: center;
        font-size: 2rem;
    }

    .create {
        margin-top: 1rem;
        margin-bottom: 1rem;
    }

    .add {
        margin-bottom: 1rem;
    }
</style>
