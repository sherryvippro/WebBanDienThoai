    .btn {
        float: left;
        margin-left: 15px;
    }

    .invoiceOut-list {
        margin-top: revert-layer;
        text-align: center;
        font-size: 2rem;
    }

    .create {
        margin-top: 1rem;
        margin-bottom: 1rem;
    }

    .add {
        margin-bottom: 1rem;
    }
</style>
