@model IEnumerable<WebBanDienThoai.Models.THoaDonNhap>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
<div class="backgr-color" style="background-color: white; padding-top: 10px; border-radius: 5px; box-shadow: 0 2px 10px 0 rgba(0, 0, 0, 0.1), 0 6px 20px 0 rgba(0, 0, 0, 0.1);">
    <div>
        <h1 class="invoiceIn-list">DANH SÁCH HÓA ĐƠN NHẬP</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Số hóa đơn
                    </th>
                    <th>
                        Ngày nhập
                    </th>
                    <th>
                        Nhà cung cấp
                    </th>
                    <th>
                        Tổng tiền
                    </th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SoHdn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NgayNhap)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaNccNavigation.TenNcc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TongHdn)
                        </td>
                        
                        <td>
                            @Html.ActionLink("Chi tiết", "Index", "TChiTietHdns", new { id = item.SoHdn})
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm hóa đơn</a>
</p>


<style>
    .btn {
        float: left;
        margin-left: 15px;
    }

    .invoiceIn-list {
        margin-top: revert-layer;
        text-align: center;
        font-size: 2rem;
    }
</style>