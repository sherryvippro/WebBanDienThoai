@model IEnumerable<WebBanDienThoai.Models.TChiTietHdb>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="backgr-color" style="background-color: white; padding-top: 10px; border-radius: 5px; box-shadow: 0 2px 10px 0 rgba(0, 0, 0, 0.1), 0 6px 20px 0 rgba(0, 0, 0, 0.1);">
    <div>
        <h1 class="invoiceOutDetail-list">CHI TIẾT HÓA ĐƠN BÁN</h1>
        <table class="table">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Số hóa đơn
                        </th>
                        <th>
                            Sản phẩm
                        </th>
                        <th>
                            Số lượng bán
                        </th>
                        <th>
                            Khuyến mãi
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoHdb)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaSpNavigation.TenSp)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Slban)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.KhuyenMai)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
    </div>
</div>

<div>
    @* <a asp-action="Index">Quay lại</a> *@
    @Html.ActionLink("Quay lại", "Index", "THoaDonBans")
</div>

