@model WebBanDienThoai.Models.TSp

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
<body>
    <h1 class="product-edit">Chỉnh sửa thông tin sản phẩm</h1>

    <hr />
    <div class="row row-edit">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaSp" />

            <div class="row" style="display: flex; width: 100%;">
                <div class="form-group col-md-4">
                    <label asp-for="TenSp" class="control-label">Tên sản phẩm</label>
                    <input asp-for="TenSp" class="form-control" />
                    <span asp-validation-for="TenSp" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="MaTl" class="control-label">Tên thể loại</label>
                    <select asp-for="MaTl" class="form-control" asp-items="@ViewBag.MaTl"></select>
                    <span asp-validation-for="MaTl" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="MaHang" class="control-label">Tên hãng</label>
                    <select asp-for="MaHang" class="form-control" asp-items="@ViewBag.MaHang"></select>
                    <span asp-validation-for="MaHang" class="text-danger"></span>
                </div>
            </div>
            <div class="row" style="display: flex; width: 100%;">
                <div class="form-group col-md-4">
                    <label asp-for="DonGiaNhap" class="control-label">Đơn giá nhập</label>
                    <input asp-for="DonGiaNhap" class="form-control" />
                    <span asp-validation-for="DonGiaNhap" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="DonGiaBan" class="control-label">Đơn giá bán</label>
                    <input asp-for="DonGiaBan" class="form-control" />
                    <span asp-validation-for="DonGiaBan" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="SoLuong" class="control-label">Số lượng</label>
                    <input asp-for="SoLuong" class="form-control" />
                    <span asp-validation-for="SoLuong" class="text-danger"></span>
                </div>
            </div>
            <div class="row" style="display: flex; width: 100%;">
                <div class="form-group col-md-4">
                    <label asp-for="Anh" class="control-label">Ảnh</label>
                    <input asp-for="Anh" class="form-control" />
                    <span asp-validation-for="Anh" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                </div>
                <div class="form-group col-md-4">
                </div>
            </div>
            <hr />

            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" style="float: left; margin-right: 15px;" />
                <a asp-action="Index" class="btn btn-primary">Quay lại</a>
            </div>

        </form>
    </div>
</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<style>
    .row-edit {
        width: 100%;
        display: block;
        margin-left: 15px;
    }

    .product-edit {
        font-size: 2rem;
        text-align: center;
        margin: revert-layer;
    }
</style>